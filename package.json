{
  "name": "liebling-custom",
  "version": "1.0.1",
  "description": "Custom theme for Ghost based on liebling",
  "author": {
    "email": "hi@eloy.co",
    "name": "Eloy Castelo Otero",
    "url": "https://eloy.co"
  },
  "scripts": {
    "build": "NODE_ENV=production node node_modules/webpack/bin/webpack.js --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "deploy": "npm run production && node scripts/deploy.js",
    "dev": "NODE_ENV=development node node_modules/webpack/bin/webpack.js --watch --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "npm run build && npm run zip",
    "zip": "run-script-os",
    "zip:default": "zip -r liebling-custom.zip ./dist/*",
    "zip:win32": "7z a -r liebling-custom.zip dist/*"
  },
  "devDependencies": {
    "@tryghost/admin-api": "~1.8.0",
    "7zip": "~0.0.6",
    "browser-sync-webpack-plugin": "~2.3.0",
    "browser-sync": "~2.27.9",
    "concurrently": "~7.0.0",
    "dotenv": "~16.0.0",
    "fs": "0.0.1-security",
    "ghost-cli": "~1.18.2",
    "laravel-mix": "~6.0.43",
    "path": "~0.12.7",
    "resolve-url-loader": "~3.1.2",
    "run-script-os": "~1.1.6",
    "sass-loader": "~8.0.2",
    "sass": "~1.49.9",
    "vue-template-compiler": "~2.6.14"
  },
  "dependencies": {
    "aos": "~2.3.4",
    "fitvids": "~2.1.1",
    "fuse.js": "~6.5.3",
    "headroom.js": "~0.12.0",
    "jquery": "~3.6.0",
    "medium-zoom": "~1.0.6",
    "shave": "~4.0.0",
    "swiper": "~8.0.7",
    "tippy.js": "~6.3.7"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "dark_mode_logo": {
        "type": "image"
      },
      "search_api_key": {
        "type": "text"
      },
      "disable_fade_animation": {
        "type": "boolean",
        "default": false
      },
      "use_custom_cta": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "custom_cta_text": {
        "type": "text",
        "default": "Subscribe",
        "group": "homepage"
      },
      "custom_cta_url": {
        "type": "text",
        "default": "/newsletter",
        "group": "homepage"
      }
    }
  },
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "license": "MIT"
}
